<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="mediadatabase">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/mediadatabase"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="mdb"/>
            <property name="eclipselink.jdbc.password" value="mdb"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>

        <class>de.meyer.mediadatabase.model.Actor</class>
        <class>de.meyer.mediadatabase.model.Media</class>

    </persistence-unit>
</persistence>
